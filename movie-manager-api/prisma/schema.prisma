generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Categories {
  ACAO
  AVENTURA
  COMEDIA
  DRAMA
  DOCUMENTARIO
  TERROR
  SUSPENSE
  FICCAO
  ANIME
  ROMANCE
}

enum Role {
  ADMIN
  USER
}

model User {
  id       String  @id @default(uuid())
  name     String  @unique
  email    String  @unique
  password String
  imageUrl String?
  role     Role    @default(USER)

  movies      Movie[]
  evaluations Evaluation[]
  myMovies    MyMovie[]

  @@map("users")
}

model Movie {
  id            String     @id @default(uuid())
  title         String
  year          String
  category      Categories
  description   String
  filename      String
  averageRating Decimal?   @default(0) @db.Decimal(2, 1)
  createdAt     DateTime   @default(now()) @map("created_at")

  user        User         @relation(fields: [user_id], references: [id])
  user_id     String
  evaluations Evaluation[]
  myMovies    MyMovie[]

  @@index([user_id])
  @@index([category])
  @@index([averageRating])
  @@map("movies")
}

model Evaluation {
  id         String   @id @default(uuid())
  rating     Decimal? @db.Decimal(2, 1)
  comment    String?
  created_at DateTime @default(now())

  movie Movie @relation(fields: [movie_id], references: [id])
  user  User  @relation(fields: [user_id], references: [id])

  movie_id String
  user_id  String

  @@index([movie_id])
  @@index([user_id])
  @@map("evaluations")
}

model MyMovie {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movie_id], references: [id], onDelete: Cascade)

  user_id  String
  movie_id String

  @@unique([user_id, movie_id])
  @@index([user_id])
  @@index([movie_id])
  @@map("my_movies")
}
