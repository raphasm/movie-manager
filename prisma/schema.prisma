generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Categories {
  ACAO
  AVENTURA
  COMEDIA
  DRAMA
  DOCUMENTARIO
  TERROR
  SUSPENSE
  FICCAO
  ANIME
  ROMANCE
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  movies      Movie[]
  evaluations Evaluation[]

  @@map("users")
}

model Movie {
  id            String     @id @default(uuid())
  title         String
  year          String
  category      Categories
  description   String
  filename      String
  averageRating Decimal?   @default(0) @db.Decimal(2, 1)

  user        User         @relation(fields: [user_id], references: [id])
  user_id     String
  evaluations Evaluation[]

  @@map("movies")
}

model Evaluation {
  id         String   @id @default(uuid())
  rating     Decimal? @db.Decimal(2, 1)
  comment    String?
  created_at DateTime @default(now())

  movie Movie @relation(fields: [movie_id], references: [id])
  user  User  @relation(fields: [user_id], references: [id])

  movie_id String
  user_id  String

  @@map("evaluations")
}
