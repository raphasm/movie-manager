generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  movies Movie[]

  @@map("users")
}

model Movie {
  id          String @id @default(uuid())
  title       String
  year        String
  category    String
  description String
  rating      Int
  filename    String

  user    User   @relation(fields: [user_Id], references: [id])
  user_Id String

  @@map("movies")
}
