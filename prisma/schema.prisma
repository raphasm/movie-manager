generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  movies      Movie[]
  evaluations Evaluation[]

  @@map("users")
}

model Movie {
  id            String @id @default(uuid())
  title         String
  year          String
  category      String
  description   String
  filename      String
  averageRating Int    @default(0)

  user        User         @relation(fields: [user_id], references: [id])
  user_id     String
  evaluations Evaluation[]

  @@map("movies")
}

model Evaluation {
  id         String   @id @default(uuid())
  rating     Int?
  comment    String?
  created_at DateTime @default(now())

  movie Movie @relation(fields: [movie_id], references: [id])
  user  User  @relation(fields: [user_id], references: [id])

  movie_id String
  user_id  String

  @@map("evaluations")
}
